# Base image with Node.js and Python
FROM node:18-slim

# Set environment variables
ENV DEBIAN_FRONTEND=noninteractive

# Install essential packages
RUN apt-get update && apt-get install -y --no-install-recommends \
    ca-certificates \
    curl \
    gnupg \
    wget \
    git \
    python3 \
    python3-pip \
    python3-dev \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# No ROCm installation needed for Windows deployment

# Set working directory
WORKDIR /app

# Install Node.js dependencies
COPY package*.json ./
RUN npm install

# Copy project files
COPY . .

# Install Python dependencies if needed
RUN pip3 install --no-cache-dir --break-system-packages torch torchvision torchaudio --index-url https://download.pytorch.org/whl/rocm5.6 \
    && pip3 install --no-cache-dir --break-system-packages transformers langchain

# Expose API port
EXPOSE 5502

# Start the API server
CMD ["node", "api-server.js"]